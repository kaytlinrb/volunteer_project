<h1 class ="jumbotron"> <%=@volunteer.name()%></h1>

<form action="/volunteer/<%= @volunteer.id() %>/delete" method="post">
  <label for="delete">Delete this volunteer:</label>
  <input name="_method" type="hidden" value="delete">
  <br>
  <button type="submit">Delete</button>
</form>


<h1>Rename</h1>


<form action="/volunteer/<%= @volunteer.id() %>/update/confirm" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename this volunteer:</label>
  <br>
  <input id="new_name" name="new_name" type="text">
  <br>
  <button type="submit">Rename</button>
  </form>
  <br>
</form>



